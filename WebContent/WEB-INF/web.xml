<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>ConnexionServlet</servlet-name>
    <servlet-class>ynovm.controleur.ConnexionServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AjouterServlet</servlet-name>
    <servlet-class>ynovm.controleur.AjouterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MainServlet</servlet-name>
    <servlet-class>ynovm.controleur.MainServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RedemarrerServlet</servlet-name>
    <servlet-class>ynovm.controleur.RedemarrerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SupprimerServlet</servlet-name>
    <servlet-class>ynovm.controleur.SupprimerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ConnexionServlet</servlet-name>
    <url-pattern>/connexion</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AjouterServlet</servlet-name>
    <url-pattern>/ajouter</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MainServlet</servlet-name>
    <url-pattern>/main</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RedemarrerServlet</servlet-name>
    <url-pattern>/redemarrer</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SupprimerServlet</servlet-name>
    <url-pattern>/supprimer</url-pattern>
  </servlet-mapping>
</web-app>